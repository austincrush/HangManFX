<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="aPane" prefHeight="350.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hangmanfx.HangManController">
   <children>
      <TextField fx:id="guessInput" alignment="CENTER" layoutY="13.0" onAction="#updateWord" prefHeight="20.0" prefWidth="280.0" promptText="guess a letter in the word" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <font>
            <Font name="Kefa Regular" size="13.0" />
         </font></TextField>
      <Button fx:id="guessButton" layoutX="123.0" layoutY="46.0" mnemonicParsing="false" onAction="#updateWord" prefHeight="20.0" prefWidth="280.0" text="Guess" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0">
         <font>
            <Font name="Kefa Regular" size="13.0" />
         </font>
      </Button>
      <Text fx:id="outputWord" layoutX="10.0" layoutY="103.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="280.0" AnchorPane.topAnchor="85.0">
         <font>
            <Font name="Kefa Regular" size="15.0" />
         </font>
      </Text>
      <Text fx:id="outputWrongLetters" layoutX="10.0" layoutY="112.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="280.0" AnchorPane.topAnchor="105.0">
         <font>
            <Font name="Kefa Regular" size="15.0" />
         </font>
      </Text>
      <Text fx:id="outputWin" layoutX="10.0" layoutY="182.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="280.0" AnchorPane.topAnchor="125.0">
         <font>
            <Font name="Kefa Regular" size="15.0" />
         </font>
      </Text>
      <Text fx:id="outputText" layoutX="138.0" layoutY="133.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="280.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="155.0">
         <font>
            <Font name="Kefa Regular" size="15.0" />
         </font>
      </Text>
      <Button fx:id="playAgainButton" layoutX="10.0" layoutY="312.0" mnemonicParsing="false" onAction="#playAgain" prefHeight="20.0" prefWidth="280.0" text="Play Again" visible="false" AnchorPane.bottomAnchor="10.0">
         <font>
            <Font name="Kefa Regular" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
